{
  "manifest_version": 2,

  "name": "Chrome tabs.query URL filtering PoC",
  "short_name": "tabs.query PoC",
  "description": "An extension to demonstrate undocumented behavior of chrome.tabs.query()",

  "version": "1.0",

  "icons": {
    "16" : "ladybug.png",
    "48" : "ladybug.png",
    "128": "ladybug.png"
  },

  "background": {
    "scripts": [ 
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "16": "ladybug.png"
    }
  },

  "permissions": [ "*://example.com/*" ]
}
